<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grafik.SettingsPage"
             Title="Настройки">

    <VerticalStackLayout Padding="20" Spacing="20">
        
        <!-- Напоминание о смене -->
        <VerticalStackLayout Spacing="8">
            <Label Text="Напоминание о смене:" 
                   FontSize="16" 
                   FontAttributes="Bold"/>
            <Picker x:Name="ReminderPicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>За 15 минут</x:String>
                        <x:String>За 1 час</x:String>
                        <x:String>За 12 часов</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </VerticalStackLayout>

        <!-- Кнопка сохранения -->
        <Button x:Name="SaveButton"
                Text="Сохранить"
                Clicked="OnSaveSettingsClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                Padding="10"/>

    </VerticalStackLayout>

</ContentPage>